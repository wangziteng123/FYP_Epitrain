files:
  "/etc/php.d/project.ini" :
    mode: "000644"
    owner: root
    group: root
    content: |
      upload_max_filesize = 128M
      post_max_size = 128M

  "/etc/cron.d/mycron":
    mode: "000644"
    owner: root
    group: root
    content: |
      * * * * * php -d register_argc_argv=On /var/www/html/artisan schedule:run >/dev/null 2>&1 

commands:
    remove_old_cron:
        command: "rm -f /etc/cron.d/*.bak"
